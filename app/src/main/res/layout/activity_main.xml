<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.polar.polarsdkhrcomparedemo.MainActivity">

    <Button
        android:id="@+id/buttonSetID1"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="00dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="5dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickChangeID1"
        android:padding="8dp"
        android:text="@string/set_id1_button"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSetID2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        />

    <Button
        android:id="@+id/buttonSetID2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="64dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickChangeID2"
        android:padding="8dp"
        android:text="@string/set_id2_button"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@id/buttonSetID1"
        app:layout_constraintBottom_toTopOf="@+id/buttonConnect2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0"
        />

    <Button
        android:id="@+id/buttonConnect2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:background="@color/colorPrimary"
        android:onClick="onClickConnect"
        android:padding="8dp"
        android:text="@string/connect"
        android:textColor="@color/colorAccent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSetID2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        />

</android.support.constraint.ConstraintLayout>